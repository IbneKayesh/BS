@{
    ViewData["Title"] = "Business";
}
<div class="card">
    <div class="card-header">
        <div id="page-title" class="card-title">
        </div>
        <div class="card-buttons">
            <button type="button" class="btn btn-size-m bg-darkseagreen" onclick="PageGoNext('page-index', '0')"><i class="fas fa-home"></i></button>
            <button type="button" class="btn btn-size-m bg-darkseagreen" onclick="PageGoShowModal('page-config','0');"><i class="fas fa-cog"></i></button>
        </div>
    </div>
    <div class="card-body">
        <div id="page-entry-business">
            <input type="hidden" id="Id" value="0" />
            <div class="row">
                <!-- row 1 -->
                <div class="col-md-1 col-12">
                    <div class="form-group">
                        <label for="BusinessLogo">Logo:</label>
                        <input type="file" id="BusinessLogo" accept=".pdf" title="Select a file Business Logo" />
                        <label for="BusinessLogo" id="fileLabel">Upload Logo</label>
                    </div>
                </div>
                <div class="col-md-4 col-12">
                    <div class="form-group">
                        <label for="BusinessName">Business Name:</label>
                        <input type="text" id="BusinessName" placeholder="Enter Business Name" title="Enter Business Name" />
                    </div>
                </div>
                <div class="col-md-2 col-12">
                    <div class="form-group">
                        <label for="ShortName">Short Name:</label>
                        <input type="text" id="ShortName" placeholder="Enter Short Name" title="Enter Short Name" />
                    </div>
                </div>
                <div class="col-md-5 col-12">
                    <div class="form-group">
                        <label for="OfficeAddress">Office Address:</label>
                        <input type="text" id="OfficeAddress" placeholder="Enter Office Address" title="Enter Office Address" />
                    </div>
                </div>
                <!-- row 2 -->
                <div class="col-md-2 col-12">
                    <div class="form-group">
                        <label for="ContactName">Contact Name:</label>
                        <input type="text" id="ContactName" placeholder="Enter Contact Name" title="Enter Contact Name" />
                    </div>
                </div>
                <div class="col-md-2 col-12">
                    <div class="form-group">
                        <label for="ContactNo">Contact No:</label>
                        <input type="text" id="ContactNo" placeholder="Enter Contact No" title="Enter Contact No" />
                    </div>
                </div>
                <div class="col-md-2 col-12">
                    <div class="form-group">
                        <label for="EmailAddress">Email Address:</label>
                        <input type="text" id="EmailAddress" placeholder="Enter Email Address" title="Enter Email Address" />
                    </div>
                </div>
                <div class="col-md-2 col-12">
                    <div class="form-group">
                        <label for="BIN">BIN:</label>
                        <input type="text" id="BIN" placeholder="Enter BIN" title="Enter BIN" />
                    </div>
                </div>
                <div class="col-md-2 col-12">
                    <div class="form-group">
                        <label for="TaxVATNo">TAX/VAT No:</label>
                        <input type="text" id="TaxVATNo" placeholder="Enter TAX/VAT No" title="Enter TAX/VAT No" />
                    </div>
                </div>
                <div class="col-md-2 col-12">
                    <div class="form-group">
                        <div class="custom-select">
                            <label for="CountryId">Country:</label>
                            <select id="CountryId" title="Select Country">
                                <option value="-">Select</option>
                                <option value="BD">BD</option>
                            </select>
                        </div>
                    </div>
                </div>
                <!-- row 3 -->
                <div class="col-md-2 col-12">
                    <div class="form-group">
                        <div class="custom-select">
                            <label for="CurrencyId">Currency:</label>
                            <select id="CurrencyId" title="Select Currency">
                                <option value="-">Select</option>
                                <option value="BDT">BDT</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-2 col-12">
                    <div class="form-group">
                        <label for="MaxEmployee">Max Employee:</label>
                        <input type="number" id="MaxEmployee" placeholder="Enter Max Employee" title="Enter Max Employee" />
                    </div>
                </div>
                <div class="col-md-2 col-12">
                    <div class="form-group">
                        <label for="MaxSalary">Max Salary:</label>
                        <input type="number" id="MaxSalary" placeholder="Enter Max Salary" title="Enter Max Salary" />
                    </div>
                </div>
                <div class="col-md-1 col-12">
                    <div class="form-group">
                        <label>Active?</label>
                        <div class="mt-6">
                            <label>
                                <input type="checkbox" id="IsActive">
                                Yes
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="page-actions" class="row-content">
            <button type="button" class="btn btn-size-sm bg-dimgrey" onclick="PageGoClear('page-entry-business',this);"><i class="fas fa-rotate"></i> Clear</button>
            <button id="btn-search" type="button" class="btn btn-size-sm bg-blue" onclick="PageGoActionEvent('page-entry-business',this);"><i class="fas fa-search"></i> Search</button>
            <button type="button" class="btn btn-size-sm bg-green" onclick="PageGoActionEvent('page-entry-business',this);"><i class="fas fa-check-circle"></i> Submit</button>
        </div>
        <div id="page-list-business" class="w-100">
        </div>
    </div>
    <div id="page-footer" class="card-footer">
    </div>
</div>

@section Scripts {
    <script src="~/Areas/Company/Business.js" asp-append-version="true"></script>
}

@{
    ViewData["Title"] = "Busy Box";
}
<div class="card">
    <div class="card-header">
        <div class="card-title">
            Options
        </div>
        <div class="card-buttons">
            <button type="button" class="btn btn-size-m bg-darkseagreen" onclick="PageGoNext('page-index', '')"><i class="fas fa-home"></i></button>
            <button type="button" class="btn btn-size-m bg-darkseagreen"><i class="fas fa-cog"></i></button>
        </div>
    </div>
    <div class="card-body">
        <div id="div1" style="width: 400px; height: 200px; background-color: lightblue; margin-bottom: 20px;">
            <p>This is div 1.</p>
        </div>

        <div id="div2" style="width: 300px; height: 150px; background-color: lightgreen;">
            <p>This is div 2.</p>
        </div>

        <button class="btn btn-size-m bg-darkseagreen" onclick="simulateAjaxCall('page-master')">Master Div</button>
        <button class="btn btn-size-m bg-darkseagreen" onclick="simulateAjaxCall('div1')">Block Div 1</button>
        <button class="btn btn-size-m bg-darkseagreen" onclick="simulateAjaxCall('div2')">Block Div 2</button>
        <button class="btn btn-size-m bg-darkseagreen" onclick="BusyBox.Hide()">Hide Overlays</button>
    </div>
    <div class="card-footer">
        Sample text
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/BusyBox.js" asp-append-version="true"></script>
}